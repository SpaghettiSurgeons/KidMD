<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_gravity="center">

    <ImageButton
        android:id="@+id/curtainAudio"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@id/curtainTitleView"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/audiobutton__2_" />

    <TextView
        android:id="@+id/curtainTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="center"
        android:text="@string/curtain"
        android:textColor="#219BA3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/curtainDesc"
        android:layout_width="213dp"
        android:layout_height="104dp"
        android:layout_below="@id/curtainTitleView"
        android:layout_alignParentStart="true"
        android:text="@string/curtain_desc"
        android:textColor="#000000"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="117dp"
        android:layout_height="109dp"
        android:layout_below="@id/curtainTitleView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="13dp"
        android:scaleType="fitXY"
        android:src="@drawable/curtain" />
</RelativeLayout>