<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6">

    <TextView
        android:id="@+id/menudesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="24dp"
        android:text="Main Menu"
        android:textColor="#219BA3"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/procedurebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/resourcebutton"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="135dp"
        android:background="@drawable/rounded_corner"
        android:text="Resources"
        android:textColor="#219BA3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hospitalbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notificationbutton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/toolsbutton"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner"
        android:text="Tools"
        android:textColor="#219BA3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/notificationbutton"
        app:layout_constraintEnd_toStartOf="@+id/profilebutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bodypartbutton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/procedurebutton"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner"
        android:text="Procedures"
        android:textColor="#219BA3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/profilebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toEndOf="@+id/bodypartbutton"
        app:layout_constraintTop_toBottomOf="@+id/menudesc" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profilebutton"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner"
        android:text="Profile"
        android:textColor="#219BA3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/settingsbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toolsbutton"
        app:layout_constraintTop_toBottomOf="@+id/procedurebutton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settingsbutton"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner"
        android:text="Settings"
        android:textColor="#219BA3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/hospitalbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notificationbutton"
        app:layout_constraintTop_toBottomOf="@+id/profilebutton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hospitalbutton"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="135dp"
        android:background="@drawable/rounded_corner"
        android:text="Hospitals"
        android:textColor="#219BA3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resourcebutton"
        app:layout_constraintTop_toBottomOf="@+id/settingsbutton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/notificationbutton"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner"
        android:text="Notifications"
        android:textColor="#219BA3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/resourcebutton"
        app:layout_constraintEnd_toStartOf="@+id/settingsbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolsbutton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bodypartbutton"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner"
        android:text="Body Parts"
        android:textColor="#219BA3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/toolsbutton"
        app:layout_constraintEnd_toStartOf="@+id/procedurebutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menudesc" />

</androidx.constraintlayout.widget.ConstraintLayout>