<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">

    <ScrollView
        android:id="@+id/menuBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="65dp">

            <include layout="@layout/toolbar" />

            <!--androidx.appcompat.widget.AppCompatButton
                android:id="@+id/banner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/main_banner_r"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:hardwareAccelerated="false"
                android:largeHeap="true"/-->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/banner"
                android:layout_width="400dp"
                android:layout_height="170dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/outlined_banner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:hardwareAccelerated="false"
                android:largeHeap="true"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bodypartbutton"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_corner_square"
                android:foreground="@drawable/anatomy"
                android:contentDescription="@string/anatomy_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/banner"
                android:hardwareAccelerated="false"
                android:largeHeap="true"/>

            <TextView
                android:id="@+id/bptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/anatomy"
                android:textColor="#219BA3"
                android:textSize="25sp"
                android:textAllCaps="true"
                android:translationZ="90dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/bodypartbutton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/procedurebutton"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner_square"
                android:foreground="@drawable/procedures"
                android:contentDescription="@string/procedures_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bodypartbutton"
                android:hardwareAccelerated="false"
                android:largeHeap="true"/>

            <TextView
                android:id="@+id/prtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/procedures"
                android:textColor="#219BA3"
                android:textSize="25sp"
                android:textAllCaps="true"
                android:translationZ="90dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/procedurebutton" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/toolsbutton"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner_square"
                android:foreground="@drawable/tools"
                android:contentDescription="@string/tools_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/procedurebutton"
                android:hardwareAccelerated="false"
                android:largeHeap="true"/>

            <TextView
                android:id="@+id/totext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/Tools"
                android:textColor="#219BA3"
                android:textSize="25sp"
                android:textAllCaps="true"
                android:translationZ="90dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/toolsbutton" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/soundsbutton"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner_square"
                android:foreground="@drawable/sounds"
                android:contentDescription="@string/sounds_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolsbutton"
                android:hardwareAccelerated="false"
                android:largeHeap="true"/>

            <TextView
                android:id="@+id/soutext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/sounds"
                android:textColor="#219BA3"
                android:textSize="25sp"
                android:textAllCaps="true"
                android:translationZ="90dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/soundsbutton" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/hospitalbutton"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner_square"
                android:foreground="@drawable/hospital"
                android:contentDescription="@string/hospital_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/soundsbutton"
                android:hardwareAccelerated="false"
                android:largeHeap="true"/>

            <TextView
                android:id="@+id/hostext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/hospital"
                android:textColor="#219BA3"
                android:textSize="25sp"
                android:textAllCaps="true"
                android:translationZ="90dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/hospitalbutton" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resourcebutton"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner_square"
                android:foreground="@drawable/resources"
                android:contentDescription="@string/additional_resources_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hospitalbutton"
                android:hardwareAccelerated="false"
                android:largeHeap="true"/>

            <TextView
                android:id="@+id/restext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/additional_resources"
                android:textColor="#219BA3"
                android:textSize="25sp"
                android:textAllCaps="true"
                android:translationZ="90dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/resourcebutton" />


            <!--android:background="@drawable/rounded_corner"-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settingsbutton"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner_square"
                android:foreground="@drawable/settings"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resourcebutton"
                android:hardwareAccelerated="false"
                android:largeHeap="true"/>

            <TextView
                android:id="@+id/settingtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/settings"
                android:textColor="#219BA3"
                android:textSize="25sp"
                android:textAllCaps="true"
                android:translationZ="90dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/settingsbutton" />

            <!--android:background="@drawable/rounded_corner"-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profilesearchbutton"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner_square"
                android:foreground="@drawable/profilesearch"
                android:contentDescription="@string/profile_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settingsbutton"
                android:hardwareAccelerated="false"
                android:largeHeap="true"/>

            <TextView
                android:id="@+id/profsearchtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/profile"
                android:textColor="#219BA3"
                android:textSize="25sp"
                android:textAllCaps="true"
                android:translationZ="90dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/profilesearchbutton" />

            <!--android:background="@drawable/rounded_corner"-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logout"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner_square"
                android:text="@string/logout"
                android:textColor="#219BA3"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profilesearchbutton"
                android:hardwareAccelerated="false"
                android:largeHeap="true"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <include layout="@layout/bottom_toolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>
