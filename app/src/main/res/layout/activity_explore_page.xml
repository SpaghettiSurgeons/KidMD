<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:background="#efefef"
    android:fillViewport="true"
    tools:context=".ExplorePage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <include layout="@layout/toolbar"/>
        <include layout="@layout/bottom_toolbar"/>

        <!-- android:background="@drawable/rounded_banner" -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/h_view1"
            android:layout_width="770dp"
            android:layout_height="150dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/rounded_banner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/h_view2"
            android:layout_width="770dp"
            android:layout_height="150dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/rounded_banner"
            app:layout_constraintTop_toBottomOf="@id/h_view1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/h_view3"
            android:layout_width="770dp"
            android:layout_height="150dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/rounded_banner"
            app:layout_constraintTop_toBottomOf="@id/h_view2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

