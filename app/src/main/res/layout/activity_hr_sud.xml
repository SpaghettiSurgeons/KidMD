<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_gravity="center">

    <ImageButton
        android:id="@+id/sudAudio"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_alignRight="@id/sudTitleView"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/audiobutton__2_" />

    <TextView
        android:id="@+id/sudTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="center"
        android:text="@string/single_use_devices"
        android:textColor="#219BA3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sudDesc"
        android:layout_width="222dp"
        android:layout_height="122dp"
        android:layout_below="@id/sudTitleView"
        android:layout_alignParentStart="true"
        android:text="@string/sud_desc"
        android:textColor="#000000"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="117dp"
        android:layout_height="109dp"
        android:layout_below="@id/sudTitleView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="13dp"
        android:scaleType="fitXY"
        android:src="@drawable/syringe_clipart_md" />
</RelativeLayout>