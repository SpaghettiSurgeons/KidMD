<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#ADD8E6">

    <TextView
        android:id="@+id/bedTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="center"
        android:text="Hospital Bed"
        android:textColor="#219BA3"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="247dp"
        android:layout_height="97dp"
        android:layout_below="@id/bedTitleView"
        android:layout_alignParentStart="true"
        android:text="@string/standard_hospital_beds_are_very_comfortable_you_can_change_the_height_of_the_head_and_footrest_some_also_have_special_features_like_controlling_the_tv"
        android:textColor="#000000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="196dp"
        android:layout_height="135dp"
        android:layout_below="@id/bedTitleView"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hospitalbed" />
</RelativeLayout>