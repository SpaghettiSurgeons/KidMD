<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#ADD8E6">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="247dp"
        android:layout_height="97dp"
        android:layout_below="@id/bpmTitleView"
        android:layout_alignParentStart="true"
        android:text="@string/here_is_a_blood_pressure_device_and_monitor_your_doctor_may_use_it_to_take_your_blood_pressure_this_helps_to_see_how_healthy_your_heart_is"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/bpmTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="center"
        android:text="Blood Pressure Monitor"
        android:textColor="#219BA3"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="158dp"
        android:layout_height="157dp"
        android:layout_below="@id/bpmTitleView"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/blood_pressure_removebg_preview" />
</RelativeLayout>