<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_gravity="center">


    <ImageButton
        android:id="@+id/bpmAudio"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@id/bpmTitleView"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/audiobutton__2_" />

    <TextView
        android:id="@+id/bpmDesc"
        android:layout_width="247dp"
        android:layout_height="97dp"
        android:layout_below="@id/bpmTitleView"
        android:layout_alignParentStart="true"
        android:text="@string/bpm_desc"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/bpmTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="center"
        android:text="@string/blood_pressure_monitor"
        android:textColor="#219BA3"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="128dp"
        android:layout_height="121dp"
        android:layout_below="@id/bpmTitleView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/blood_pressure_removebg_preview" />
</RelativeLayout>