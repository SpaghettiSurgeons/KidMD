<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6"
    tools:context=".HospitalMenu">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/locateButton"
        android:layout_width="283dp"
        android:layout_height="153dp"
        android:background="@drawable/rounded_corner"
        android:text="Hospital Locator"
        android:textColor="#219BA3"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/roomPhotos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/roomPhotos"
        android:layout_width="283dp"
        android:layout_height="153dp"
        android:background="@drawable/rounded_corner"
        android:text="Hospital Room Photos"
        android:textColor="#219BA3"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/interactButton"
        android:layout_width="283dp"
        android:layout_height="153dp"
        android:background="@drawable/rounded_corner"
        android:text="Interact with Hospital Room"
        android:textColor="#219BA3"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomPhotos" />
</androidx.constraintlayout.widget.ConstraintLayout>